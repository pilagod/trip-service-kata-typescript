{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "paths": {
      "@error": ["src/error"],
      "@trip/*": ["src/trip/*"],
      "@type": ["src/type"],
      "@user/*": ["src/user/*"]
    },
    "target": "esnext"
  },
  "include": ["./src/**/*"]
}
